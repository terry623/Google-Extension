{
  "manifest_version": 2,
  "name": "NTHU Course",
  "description": "幫助你的選課",
  "version": "2.0",
  "page_action": {
    "default_title": "開始選課",
    "default_icon": "static/icon.png",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["activeTab", "tabs"],
  "content_scripts": [
    {
      "matches": ["*://www.ccxp.nthu.edu.tw/ccxp/INQUIRE/select_entry.php?*"],
      "js": ["dist/bundle.js"]
    }
  ],
  "background": {
    "scripts": ["event/event.js"],
    "persistent": false
  }
}
