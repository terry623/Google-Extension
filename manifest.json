{
  "manifest_version": 2,
  "name": "NTHU Course",
  "description": "幫助你的選課",
  "version": "2.0",
  "browser_action": {
    "default_title": "我要選到課!",
    "default_icon": "./static/icon.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://www.ccxp.nthu.edu.tw/ccxp/INQUIRE/select_entry.php?*"],
      "js": ["./dist/bundle.js", "./semantic/dist/semantic.min.js"],
      "css": ["./semantic/dist/semantic.min.css"]
    }
  ],
  "web_accessible_resources": [
    "semantic/dist/semantic.min.js",
    "semantic/dist/semantic.min.css"
  ]
}
