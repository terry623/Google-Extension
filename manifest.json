{
  "manifest_version": 2,
  "name": "NTHU Course 正式選課測試版",
  "description": "幫助清大學生找到適合自己的課程",
  "version": "1.0",
  "page_action": {
    "default_title": "開始選課",
    "default_icon": "static/icon.png",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": ["dist/event.bundle.js"],
    "persistent": true
  },
  "content_security_policy":
    "script-src 'self' 'unsafe-eval' https://js.driftt.com/include/ https://code.jquery.com/jquery-3.3.1.min.js https://mozilla.github.io/pdf.js/build/pdf.js https://mozilla.github.io/pdf.js/build/pdf.worker.js https://cdn.jsdelivr.net/npm/sortablejs@1.6.1/Sortable.min.js https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js; object-src 'self'"
}
