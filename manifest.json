{
  "manifest_version": 2,
  "name": "NTHU Course",
  "description": "幫助你的選課",
  "version": "2.0",
  "page_action": {
    "default_title": "開始選課",
    "default_icon": "static/icon.png",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["activeTab", "tabs", "storage", "http://localhost/*"],
  "content_scripts": [
    {
      "matches": ["*://www.ccxp.nthu.edu.tw/ccxp/INQUIRE/select_entry.php?*"],
      "js": ["dist/content.bundle.js"]
    }
  ],
  "background": {
    "scripts": ["dist/event.bundle.js"],
    "persistent": false
  },
  "content_security_policy":
    "script-src 'self' 'unsafe-eval' https://js.driftt.com/include/; object-src 'self'"
}
